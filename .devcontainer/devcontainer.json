{
    "name": "terraform-codespaces",
    "extensions": [
		"eamodio.gitlens",
		"davidanson.vscode-markdownlint",
		"hashicorp.terraform",
		"jebbs.plantuml",
		"qhoekman.language-plantuml",
		"clysto.plantuml",
		"well-ar.plantuml",
		"yzhang.markdown-all-in-one",
		"dedsec727.jekyll-run",
		"ginfuru.ginfuru-vscode-jekyll-syntax"
	],
	// Adds VS Code settings.json values into the environment.
	"settings": {
		"plantuml.preview": "/usr/bin/plantuml",
		"plantuml.exportOutDir": "docs/img",
		"plantuml.exportSubFolder": false,
		"plantuml.diagramsRoot": "docs/diagrams",
		"plantuml.exportFormat": "png",
		"plantuml.render": "Local"
	},
    "postCreateCommand": "/bin/bash ./setup-debian.sh"
  }